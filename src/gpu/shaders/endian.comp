#version 450

layout(local_size_x = 128) in;

layout(binding = 0) readonly buffer Input {
    uvec4 in_buf[];
};
layout(binding = 1) writeonly buffer Output {
    uvec4 out_buf[];
};

void main() {
    uvec4 tmp = in_buf[gl_GlobalInvocationID.x];
    out_buf[gl_GlobalInvocationID.x] = (tmp >> 24) | ((tmp >> 8) & 0xFF00) | ((tmp & 0xFF00) << 8) | (tmp << 24);
}
